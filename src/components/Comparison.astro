---
// Calculadora de ahorro comparando garrafones vs Purifreze
---

<section class="comparison-section">
    <div class="container">
        <div class="section-header">
            <span class="badge">
                <i class="fa-solid fa-calculator"></i>
                Calculadora de Ahorro
            </span>
            <h2 class="title">
                ¿Cuánto <span class="gradient-text">ahorras con Purifreze?</span
                >
            </h2>
            <p class="subtitle">Descubre tu ahorro mensual en unos segundos</p>
        </div>

        <div class="calculator-container">
            <div class="calculator-card">
                <!-- Input Section -->
                <div class="input-section">
                    <div class="input-grid">
                        <!-- Cantidad de Garrafones -->
                        <div class="input-group">
                            <label class="input-label">
                                <i class="fa-solid fa-jug-detergent"></i>
                                ¿Cuántos garrafones usas al mes?
                            </label>
                            <div class="dual-input">
                                <div class="slider-container">
                                    <input
                                        type="range"
                                        id="garrafonesSlider"
                                        min="1"
                                        max="30"
                                        value="12"
                                        class="slider"
                                    />
                                </div>
                                <div class="number-input-wrapper">
                                    <input
                                        type="number"
                                        id="garrafonesInput"
                                        min="1"
                                        max="30"
                                        value="12"
                                        class="number-input"
                                    />
                                    <span class="input-suffix">garrafones</span>
                                </div>
                            </div>
                        </div>

                        <!-- Precio por Garrafón -->
                        <div class="input-group">
                            <label class="input-label">
                                <i class="fa-solid fa-dollar-sign"></i>
                                ¿Cuánto cuesta cada garrafón?
                            </label>
                            <div class="number-input-wrapper price">
                                <span class="input-prefix">$</span>
                                <input
                                    type="number"
                                    id="precioInput"
                                    min="1"
                                    max="200"
                                    value="45"
                                    step="5"
                                    class="number-input"
                                />
                                <span class="input-suffix">MXN</span>
                            </div>
                            <p class="input-hint">El precio promedio es $45</p>
                        </div>
                    </div>

                    <!-- Gasto Mensual Calculado -->
                    <div class="monthly-spending">
                        <div class="spending-card">
                            <p class="spending-label">
                                Tu gasto mensual actual
                            </p>
                            <div class="spending-amount" id="gastoMensual">
                                $450
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Calculation Display -->
                <div class="calculation-grid">
                    <!-- Garrafones Cost -->
                    <div class="cost-card garrafones-card">
                        <div class="card-icon">
                            <i class="fa-solid fa-jug-detergent"></i>
                        </div>
                        <h3>Garrafones</h3>
                        <p class="cost-label">Costo mensual</p>
                        <div class="cost-amount">
                            $<span id="garrafonesCost">450</span>
                        </div>
                        <p class="cost-detail">
                            <span id="garrafonesQty">10</span> garrafones a $<span
                                id="garrafonesPrecio">45</span
                            > c/u
                        </p>
                    </div>

                    <!-- VS Divider -->
                    <div class="vs-divider-vertical">
                        <span>VS</span>
                    </div>

                    <!-- Purifreze Cost -->
                    <div class="cost-card purifreze-card">
                        <div class="card-icon purifreze">
                            <i class="fa-solid fa-droplet"></i>
                        </div>
                        <h3>Purifreze</h3>
                        <p class="cost-label">Costo mensual</p>
                        <div class="cost-amount purifreze">$450</div>
                        <p class="cost-detail">Todo incluido + Ilimitado</p>
                    </div>
                </div>

                <!-- Savings Display -->
                <div class="savings-section" id="savingsSection">
                    <div class="savings-card positive" id="savingsCard">
                        <div class="savings-icon">
                            <i class="fa-solid fa-piggy-bank"></i>
                        </div>
                        <div class="savings-content">
                            <p class="savings-label" id="savingsLabel">
                                Tu ahorro mensual
                            </p>
                            <div class="savings-amount" id="savingsAmount">
                                $0
                            </div>
                            <p class="savings-annual" id="savingsAnnual">
                                $0 al año
                            </p>
                        </div>
                    </div>
                </div>

                <!-- CTA Button -->
                <div class="cta-section">
                    <a
                        href="https://wa.me/5219991336108?text=Hola,%20quiero%20ahorrar%20con%20Purifreze"
                        class="cta-button"
                    >
                        <i class="fa-brands fa-whatsapp"></i>
                        Quiero Comenzar a Ahorrar
                    </a>
                </div>
            </div>

            <!-- Comparison Table Section -->
            <div class="comparison-table-section">
                <div class="table-header">
                    <h3 class="table-title">
                        <i class="fa-solid fa-chart-bar"></i>
                        Comparación detallada
                    </h3>
                    <p class="table-subtitle">
                        Descubre todas las ventajas de Purifreze
                    </p>

                    <!-- Category Filters -->
                    <div class="category-filters">
                        <button class="filter-btn active" data-category="all">
                            <i class="fa-solid fa-list"></i>
                            Todas
                        </button>
                        <button class="filter-btn" data-category="cost">
                            <i class="fa-solid fa-dollar-sign"></i>
                            Costo
                        </button>
                        <button class="filter-btn" data-category="convenience">
                            <i class="fa-solid fa-truck"></i>
                            Conveniencia
                        </button>
                        <button class="filter-btn" data-category="quality">
                            <i class="fa-solid fa-award"></i>
                            Calidad
                        </button>
                        <button class="filter-btn" data-category="environment">
                            <i class="fa-solid fa-leaf"></i>
                            Ecología
                        </button>
                        <button class="filter-btn" data-category="health">
                            <i class="fa-solid fa-heart-pulse"></i>
                            Salud
                        </button>
                    </div>
                </div>

                <!-- Comparison Table -->
                <div class="comparison-table-wrapper">
                    <table class="comparison-table">
                        <thead>
                            <tr>
                                <th class="feature-column">Característica</th>
                                <th class="purifreze-column">
                                    <div class="column-header purifreze">
                                        <i class="fa-solid fa-droplet"></i>
                                        <span>Purifreze</span>
                                    </div>
                                </th>
                                <th class="garrafon-column">
                                    <div class="column-header garrafon">
                                        <i class="fa-solid fa-jug-detergent"
                                        ></i>
                                        <span>Garrafones</span>
                                    </div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Costo -->
                            <tr class="table-row" data-category="cost">
                                <td class="feature-cell">
                                    <i
                                        class="fa-solid fa-dollar-sign category-icon"
                                    ></i>
                                    Inversión Inicial
                                </td>
                                <td class="value-cell purifreze">
                                    <span class="value">$0</span>
                                    <span class="badge success"
                                        >Sin depósito</span
                                    >
                                </td>
                                <td class="value-cell garrafon">
                                    <span class="value">Variable</span>
                                    <span class="badge neutral"
                                        >Depende del proveedor</span
                                    >
                                </td>
                            </tr>
                            <tr class="table-row" data-category="cost">
                                <td class="feature-cell">
                                    <i
                                        class="fa-solid fa-calendar-day category-icon"
                                    ></i>
                                    Costo Mensual
                                </td>
                                <td class="value-cell purifreze">
                                    <span class="value">$450</span>
                                    <span class="badge success"
                                        >Fijo e ilimitado</span
                                    >
                                </td>
                                <td class="value-cell garrafon">
                                    <span class="value" id="tableGarrafonesCost"
                                        >$450+</span
                                    >
                                    <span class="badge warning">Variable</span>
                                </td>
                            </tr>
                            <tr class="table-row" data-category="cost">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-wrench category-icon"
                                    ></i>
                                    Mantenimiento
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Gratis</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">No aplica</span>
                                </td>
                            </tr>

                            <!-- Conveniencia -->
                            <tr class="table-row" data-category="convenience">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-truck category-icon"
                                    ></i>
                                    Entrega a Domicilio
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">No necesario</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i class="fa-solid fa-clock cross-icon"></i>
                                    <span class="value"
                                        >Dependes del repartidor</span
                                    >
                                </td>
                            </tr>
                            <tr class="table-row" data-category="convenience">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-box category-icon"
                                    ></i>
                                    Almacenamiento
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value"
                                        >Sin espacio requerido</span
                                    >
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">Requiere espacio</span>
                                </td>
                            </tr>
                            <tr class="table-row" data-category="convenience">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-clock category-icon"
                                    ></i>
                                    Disponibilidad 24/7
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Siempre disponible</span
                                    >
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">Horario limitado</span>
                                </td>
                            </tr>

                            <!-- Calidad -->
                            <tr class="table-row" data-category="quality">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-filter category-icon"
                                    ></i>
                                    Sistema de Purificación
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value"
                                        >5 etapas de filtración</span
                                    >
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-question-circle neutral-icon"
                                    ></i>
                                    <span class="value">Variable</span>
                                </td>
                            </tr>
                            <tr class="table-row" data-category="quality">
                                <td class="feature-cell">
                                    <i
                                        class="fa-solid fa-temperature-arrow-down category-icon"
                                    ></i>
                                    Frescura del Agua
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Siempre fresca</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">Depende del tiempo</span
                                    >
                                </td>
                            </tr>
                            <tr class="table-row" data-category="quality">
                                <td class="feature-cell">
                                    <i
                                        class="fa-solid fa-certificate category-icon"
                                    ></i>
                                    Certificaciones
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Certificado</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-question-circle neutral-icon"
                                    ></i>
                                    <span class="value">Variable</span>
                                </td>
                            </tr>

                            <!-- Medio Ambiente -->
                            <tr class="table-row" data-category="environment">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-recycle category-icon"
                                    ></i>
                                    Plástico Desechado
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Cero plástico</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">Alto consumo</span>
                                </td>
                            </tr>
                            <tr class="table-row" data-category="environment">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-car category-icon"
                                    ></i>
                                    Huella de Carbono
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Mínima</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-times-circle cross-icon"
                                    ></i>
                                    <span class="value">Por transporte</span>
                                </td>
                            </tr>

                            <!-- Salud -->
                            <tr class="table-row" data-category="health">
                                <td class="feature-cell">
                                    <i
                                        class="fa-solid fa-shield-halved category-icon"
                                    ></i>
                                    Control de Calidad
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Constante</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-question-circle neutral-icon"
                                    ></i>
                                    <span class="value">Variable</span>
                                </td>
                            </tr>
                            <tr class="table-row" data-category="health">
                                <td class="feature-cell">
                                    <i class="fa-solid fa-droplet category-icon"
                                    ></i>
                                    Minerales Esenciales
                                </td>
                                <td class="value-cell purifreze">
                                    <i
                                        class="fa-solid fa-check-circle check-icon"
                                    ></i>
                                    <span class="value">Preservados</span>
                                </td>
                                <td class="value-cell garrafon">
                                    <i
                                        class="fa-solid fa-question-circle neutral-icon"
                                    ></i>
                                    <span class="value">Variable</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .comparison-section {
        padding: 100px 20px;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        position: relative;
        overflow: hidden;
    }

    .container {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    /* Section Header */
    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 20px;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        border-radius: 50px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 20px;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
    }

    .title {
        font-size: clamp(32px, 5vw, 48px);
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 16px;
        line-height: 1.2;
    }

    .gradient-text {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        font-size: 18px;
        color: #64748b;
    }

    /* Calculator Container */
    .calculator-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .calculator-card {
        background: white;
        border-radius: 32px;
        padding: 48px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    }

    /* Input Section */
    .input-section {
        margin-bottom: 48px;
    }

    .input-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 32px;
        margin-bottom: 32px;
    }

    .input-group {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .input-label {
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 16px;
        font-weight: 700;
        color: #1e293b;
    }

    .input-label i {
        color: #3b82f6;
        font-size: 20px;
    }

    .input-hint {
        font-size: 13px;
        color: #64748b;
        margin-top: -8px;
        font-style: italic;
    }

    /* Dual Input (Slider + Number) */
    .dual-input {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .slider-container {
        position: relative;
    }

    .slider {
        width: 100%;
        height: 8px;
        border-radius: 50px;
        background: linear-gradient(90deg, #dbeafe 0%, #3b82f6 100%);
        outline: none;
        -webkit-appearance: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .slider:hover {
        background: linear-gradient(90deg, #bfdbfe 0%, #2563eb 100%);
    }

    .slider::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        transition: all 0.2s ease;
    }

    .slider::-webkit-slider-thumb:hover {
        transform: scale(1.2);
        box-shadow: 0 6px 16px rgba(59, 130, 246, 0.6);
    }

    .slider::-moz-range-thumb {
        width: 28px;
        height: 28px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        cursor: pointer;
        border: none;
        box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        transition: all 0.2s ease;
    }

    .slider::-moz-range-thumb:hover {
        transform: scale(1.2);
        box-shadow: 0 6px 16px rgba(59, 130, 246, 0.6);
    }

    /* Number Input Wrapper */
    .number-input-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border: 2px solid #e2e8f0;
        border-radius: 16px;
        padding: 12px 20px;
        transition: all 0.3s ease;
    }

    .number-input-wrapper:focus-within {
        border-color: #3b82f6;
        background: white;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.1);
    }

    .number-input-wrapper.price {
        justify-content: center;
    }

    .input-prefix,
    .input-suffix {
        font-size: 16px;
        font-weight: 600;
        color: #64748b;
        flex-shrink: 0;
    }

    .input-prefix {
        color: #3b82f6;
        font-size: 18px;
    }

    .number-input {
        border: none;
        background: transparent;
        font-size: 20px;
        font-weight: 700;
        color: #1e293b;
        outline: none;
        width: 80px;
        text-align: center;
        -moz-appearance: textfield;
    }

    .number-input::-webkit-outer-spin-button,
    .number-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Monthly Spending Display */
    .monthly-spending {
        margin-top: 24px;
    }

    .spending-card {
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border: 2px solid rgba(59, 130, 246, 0.3);
        border-radius: 20px;
        padding: 24px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .spending-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle,
            rgba(59, 130, 246, 0.1) 0%,
            transparent 70%
        );
        animation: pulse 3s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: scale(1);
            opacity: 0.5;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
    }

    .spending-label {
        font-size: 13px;
        font-weight: 600;
        color: #1e40af;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        position: relative;
        z-index: 1;
    }

    .spending-amount {
        font-size: 42px;
        font-weight: 900;
        color: #3b82f6;
        position: relative;
        z-index: 1;
        text-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
        transition: all 0.3s ease;
    }

    .spending-amount.updating {
        transform: scale(1.1);
    }

    /* Calculation Grid */
    .calculation-grid {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        gap: 32px;
        margin-bottom: 40px;
        align-items: center;
    }

    .cost-card {
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 24px;
        padding: 32px;
        text-align: center;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .cost-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    }

    .purifreze-card {
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border: 2px solid rgba(59, 130, 246, 0.3);
    }

    .card-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 16px;
        background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        color: #64748b;
    }

    .card-icon.purifreze {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
    }

    .cost-card h3 {
