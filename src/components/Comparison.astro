<script>
    function initCalculator() {
        // Get all DOM elements
        const slider = document.getElementById(
            "garrafonesSlider",
        ) as HTMLInputElement;
        const garrafonesInput = document.getElementById(
            "garrafonesInput",
        ) as HTMLInputElement;
        const precioInput = document.getElementById(
            "precioInput",
        ) as HTMLInputElement;
        const gastoMensual = document.getElementById("gastoMensual");
        const costDisplay = document.getElementById("garrafonesCost");
        const garrafonesQty = document.getElementById("garrafonesQty");
        const garrafonesPrecio = document.getElementById("garrafonesPrecio");
        const savingsCard = document.getElementById("savingsCard");
        const savingsLabel = document.getElementById("savingsLabel");
        const savingsAmount = document.getElementById("savingsAmount");
        const savingsAnnual = document.getElementById("savingsAnnual");
        const savingsIcon = savingsCard?.querySelector(".savings-icon i");

        const PURIFREZE_PRICE = 450;

        // Sync slider and number input
        function syncInputs(source: "slider" | "input") {
            if (!slider || !garrafonesInput) return;

            if (source === "slider") {
                garrafonesInput.value = slider.value;
            } else {
                // Validate and constrain the input value
                let value = parseInt(garrafonesInput.value);
                if (isNaN(value) || value < 1) value = 1;
                if (value > 30) value = 30;
                garrafonesInput.value = value.toString();
                slider.value = value.toString();
            }
            updateCalculation();
        }

        // Validate precio input
        function validatePrecio() {
            if (!precioInput) return;
            let value = parseInt(precioInput.value);
            if (isNaN(value) || value < 1) value = 1;
            if (value > 200) value = 200;
            precioInput.value = value.toString();
            updateCalculation();
        }

        // Main calculation function
        function updateCalculation() {
            const garrafones = parseInt(slider?.value || "10");
            const precioPorGarrafon = parseInt(precioInput?.value || "45");
            const garrafonesCost = garrafones * precioPorGarrafon;
            const difference = garrafonesCost - PURIFREZE_PRICE;
            const annualDifference = difference * 12;

            // Animate gasto mensual update
            if (gastoMensual) {
                gastoMensual.classList.add("updating");
                setTimeout(
                    () => gastoMensual.classList.remove("updating"),
                    300,
                );
                gastoMensual.textContent = `$${garrafonesCost.toLocaleString("es-MX")}`;
            }

            // Update garrafones cost in comparison
            if (costDisplay) {
                costDisplay.textContent =
                    garrafonesCost.toLocaleString("es-MX");
            }

            // Update quantity and price detail
            if (garrafonesQty) {
                garrafonesQty.textContent = garrafones.toString();
            }
            if (garrafonesPrecio) {
                garrafonesPrecio.textContent = precioPorGarrafon.toString();
            }

            // Update table garrafones cost
            const tableGarrafonesCost = document.getElementById(
                "tableGarrafonesCost",
            );
            if (tableGarrafonesCost) {
                tableGarrafonesCost.textContent = `$${garrafonesCost.toLocaleString("es-MX")}+`;
            }

            // Update savings card
            if (savingsCard && savingsLabel && savingsAmount && savingsAnnual) {
                if (difference > 0) {
                    // Saving money with Purifreze
                    savingsCard.className = "savings-card positive";
                    savingsLabel.textContent = "¡Tu ahorro mensual!";
                    savingsAmount.textContent = `$${Math.abs(difference).toLocaleString("es-MX")}`;
                    savingsAnnual.textContent = `$${Math.abs(annualDifference).toLocaleString("es-MX")} al año`;
                    if (savingsIcon) {
                        savingsIcon.className = "fa-solid fa-piggy-bank";
                    }
                } else if (difference < 0) {
                    // Spending more with Purifreze
                    savingsCard.className = "savings-card negative";
                    savingsLabel.textContent = "Estarías gastando de más";
                    savingsAmount.textContent = `$${Math.abs(difference).toLocaleString("es-MX")}`;
                    savingsAnnual.textContent = `$${Math.abs(annualDifference).toLocaleString("es-MX")} al año de sobrecosto`;
                    if (savingsIcon) {
                        savingsIcon.className =
                            "fa-solid fa-exclamation-triangle";
                    }
                } else {
                    // Same price
                    savingsCard.className = "savings-card neutral";
                    savingsLabel.textContent = "Mismo costo";
                    savingsAmount.textContent = "$0";
                    savingsAnnual.textContent =
                        "Pero con Purifreze tienes agua ILIMITADA";
                    if (savingsIcon) {
                        savingsIcon.className = "fa-solid fa-equals";
                    }
                }

                // Add animation to savings card
                savingsCard.style.animation = "none";
                setTimeout(() => {
                    savingsCard.style.animation = "";
                }, 10);
            }
        }

        // Event listeners
        slider?.addEventListener("input", () => syncInputs("slider"));
        garrafonesInput?.addEventListener("input", () => syncInputs("input"));
        garrafonesInput?.addEventListener("blur", () => syncInputs("input"));
        precioInput?.addEventListener("input", validatePrecio);
        precioInput?.addEventListener("blur", validatePrecio);

        // Initial calculation
        updateCalculation();
    }

    // Table filters functionality
    function initTableFilters() {
        const filterButtons =
            document.querySelectorAll<HTMLElement>(".filter-btn");
        const tableRows = document.querySelectorAll<HTMLElement>(".table-row");

        filterButtons.forEach((button) => {
            button.addEventListener("click", () => {
                const category = button.dataset.category;

                // Update active button
                filterButtons.forEach((btn) => btn.classList.remove("active"));
                button.classList.add("active");

                // Filter rows
                tableRows.forEach((row) => {
                    if (category === "all") {
                        row.classList.remove("hidden");
                    } else {
                        if (row.dataset.category === category) {
                            row.classList.remove("hidden");
                        } else {
                            row.classList.add("hidden");
                        }
                    }
                });

                // Add animation
                tableRows.forEach((row, index) => {
                    if (!row.classList.contains("hidden")) {
                        row.style.animation = "none";
                        setTimeout(() => {
                            row.style.animation = `fadeIn 0.3s ease ${index * 0.05}s forwards`;
                        }, 10);
                    }
                });
            });
        });
    }

    // Add fadeIn animation
    const style = document.createElement("style");
    style.textContent = `
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    `;
    document.head.appendChild(style);

    // Initialize on DOM load
    document.addEventListener("DOMContentLoaded", () => {
        initCalculator();
        initTableFilters();
    });

    // Re-initialize after Astro page transitions
    document.addEventListener("astro:page-load", () => {
        initCalculator();
        initTableFilters();
    });
</script>
